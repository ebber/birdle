<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.birdle.pranay.birdle.Stage">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/song1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Empty Song"
        android:id="@+id/song1Text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song1Image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/song2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Empty Song"
            android:id="@+id/song2Text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song2Image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/song3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Empty Song"
            android:id="@+id/song3Text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song3Image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/song4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Empty Song"
            android:id="@+id/song4Text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song4Image" />

    </LinearLayout>



</LinearLayout>
